{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cd build && make clean && make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cppcheck",
            "type": "shell",
            "command": "cppcheck --template=gcc --std=c++11 --enable=warning,performance,style --force naos/",
            "problemMatcher": {
                "fileLocation": "relative",
                "severity": "warning",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "cloc",
            "type": "shell",
            "command": "cloc -exclude-dir=\"build,run\" ./"
        }
    ]
}