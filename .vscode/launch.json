{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug kernel",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/build/debug/system/kernel.dbg",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/debug/system/",
            "target": ":1234",
            "remote": true
        },
        {
            "name": "debug nanobox",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/build/debug/rfsroot/bin/nanobox.dbg",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build/debug/system/",
            "target": ":1234",
            "remote": true
        },
        {
            "name": "debug init",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/build/debug/rfsroot/bin/init.dbg",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build/debug/system/",
            "target": ":1234",
            "remote": true
        }
    ]
}